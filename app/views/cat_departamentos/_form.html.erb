<div class="container">
    <div id="align-forms">
        <%= nested_form_for @departamento, validate: true do |departamento| %>
            <div class="row">
                <%= departamento.label :Nombre_del_departamento, :class => 'col-md-3' %>
                <div class="col-md-4">
                <%= departamento.text_field :nombreDpto, :class => 'form-control', :maxlength => 60, validate: true %>
                </div>
            </div>
        
            <div class="row">
                <%= departamento.label :Encargado, :class => 'col-md-3' %>
                <div class="col-md-4">
                <%= departamento.text_field :encargado, :class => 'form-control', :maxlength => 60, validate: true %>
                </div>
            </div>
        
            <div class="row">
                <%= departamento.label :Estado, :class => 'col-md-3' %>
                <div class="col-md-4">
                <%= departamento.select :estado, options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]),{}, :class => 'form-control', validate: true %>
                </div>
            </div>
            
            <div class="row" id="btn-cancelar">
                <div class="col-md-5" align="right">
                    <%= departamento.submit :Guardar, :class => 'btn btn-success' %>              
                </div>   
        <% end %>
                <div class="col-md-4">
                        <%= button_to "Cancelar", cat_departamentos_path, :class => 'btn btn-warning', :method => :get %>
                </div>
            </div>
    </div>
</div>