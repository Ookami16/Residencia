<div class="container">
    <div id="align-forms">
        <%= nested_form_for @viatico, validate: true do |viatico| %>
            <div class="row">
                <%= viatico.label :Nombre_del_viatico, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= viatico.text_field :nombreViatico, :class => 'form-control', :style => 'border: 1px solid red', validate: true %>
                </div>
            </div>
            
            <div class="row">
                <%= viatico.label :Estado, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= viatico.select :estado, options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]),{}, :class => 'form-control', validate: true %>
                </div>
            </div>
        
            <div class="row">
                <div class="col-xs-2 col-md-4" id="btn-cancelar">
                    <%= viatico.submit :Guardar, :class => 'btn btn-success' %>
                </div>   
        <% end %>
                <div class="col-xs-2 col-md-4" id="btn-cancelar">
                        <%= button_to "Cancelar", cat_viaticos_path, :class => 'btn btn-warning', :method => :get %>
                </div>
            </div>
    </div>
</div>