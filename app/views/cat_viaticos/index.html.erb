<div class="container">
    <%= render template: "siged/menuAdmin" %>
    <% breadcrumb :cat_viaticos %>
    
    <h3 id="align-title">Cátalogo de Viáticos para Actividades</h3>
    
    <div class="row">
        <div class="col-md-1">
            <% if can? :create, CatViatico %>
            <%= button_to new_cat_viatico_path, :class => "btn btn-primary", title: "Nuevo", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <% end %>
        </div>

        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <th class="info"><%= sortable "nombreViatico" %></th>
                    <th class="info"><%= sortable "estado" %></th>
                </thead>
                <% @viaticos.each do |viatico| %>
                    <tbody>
                        <td class="active"><%= viatico.nombreViatico %></td>
                        <td class="active"><%= viatico.estado %></td>
                        <td class="active">
                            <%= link_to edit_cat_viatico_path(viatico), title: "Editar" do %>
                                <span class="glyphicon glyphicon-pencil green"></span>
                            <% end %>
                        </td>
                    </tbody>
                <% end %>
            </table>
            <%= will_paginate @viaticos %>
        </div>
    </div>
</div>