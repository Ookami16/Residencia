<div class = "container" >
  <div>
    <%= render template: ("siged/menu" + current_usuario.rol.capitalize) %>
  </div>
  <% breadcrumb :banco_proyectos %>
  
  <h3 id = "aling-title"> </h3>
  <h3 id="align-title">Proyectos de Residencia en Banco</h3>
  <div class = "row">
    <div class="col-xs-6 col-sm-12">
      <table class="table table-bordered">
        <thead>
          <th class="info"><%= sortable "clave", "Clave" %></th>
          <th class="info"><%= sortable "nombre_proyecto_b", "Nombre del Proyecto" %></th>
          <th class="info"><%= "Nombre Empresa/Institución" %></th>
        </thead>
     
        <% @banco_proyectos.each do |banco_proyecto| %>
          <tbody>
            <% @banco_estudiantes = BancoProyectoEstudiante.where(:banco_proyecto_id => banco_proyecto.id).first %>
            
            <td class="active"><%= banco_proyecto.clave %></td>
            <td class="active"><%= banco_proyecto.nombre_proyecto_b %></td>
            <% @empresa = Empresa.where(:rfcEmpresa =>  banco_proyecto.fk_rfc_emp_inst).first %>
            <td class="active"><%= @empresa.nombreE %></td>
            <% if @banco_estudiantes != nil %>
              <td class="active">
                <% anteproy = Anteproyecto.find_by(:clave => banco_proyecto.clave) %>
                
                <% if anteproy != nil %>
                  Anteproyecto en curso
                <% else %>
                  Proyecto solicitado
                <% end %>
              </td>
            <% else %>
              <td></td>
            <% end %>
            <td class="active">
              <% if current_usuario.rol != "estudiante" %>
                <%= link_to edit_banco_proyecto_path(banco_proyecto), title: "Editar" do %>
                    <span class="glyphicon glyphicon-pencil green"></span>
                <% end %>
                <%= link_to banco_proyecto_path(banco_proyecto), title: "Eliminar", method: :delete, data: { confirm: '¿Está segur@ que desa eliminar este proyecto?' }, remote: true do %>
                    <span class="glyphicon glyphicon-trash green"></span>
                <% end %>
              <% end %>
                <%= link_to banco_proyecto_path(banco_proyecto), title: "Ver" do %>
                  <span class="glyphicon glyphicon-eye-open green"></span>
              <% end %>
            </td>
          </tbody>
        <% end %>
      </table>
      <%= will_paginate @banco_proyectos %>
    </div>
  </div>
</div>
