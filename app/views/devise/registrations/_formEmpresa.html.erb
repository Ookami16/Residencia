
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div id="marco">
        <div class="row">
            <div class="col-xs-6 col-sm-2"><%= f.label :Rfc %></div> 
            <div class="col-xs-6 col-sm-4"><%= f.text_field :rfc %></div>
        </div>
        <div class="row">
            <div class="col-xs-6 col-sm-2"><%= f.label :Correo_electrónico %> </div>
            <div class="col-xs-6 col-sm-4"><%= f.email_field :email, autofocus: true %></div>
            <div class="col-xs-6 col-sm-2"><% f.label :Rol %></div>
            <div class="col-xs-6 col-sm-4"><%= f.hidden_field :rol, value: 'empresa' %></div>
        </div>

        <div class="row">
            <div class="col-xs-6 col-sm-2"><%= f.label :Contraseña %></div>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres minimo)</em>
            <% end %>
            <div class="col-xs-6 col-sm-4"><%= f.password_field :password, autocomplete: "off" %></div>
            <div class="col-xs-6 col-sm-2"><%= f.label :Confirmar_contraseña %></div>
            <div class="col-xs-6 col-sm-4"><%= f.password_field :password_confirmation, autocomplete: "off" %></div>
        </div>

        <div class="row">
            <div class="col-xs-6" align="center">
                <%= f.submit "Guardar", :class => 'btn btn-success' %>
            </div>
        </div>
    </div>
<% end %>
