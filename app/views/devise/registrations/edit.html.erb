<h2>Edit <%= resource_name.to_s.humanize %></h2>

<div class="container">
    <div id="align-forms">
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }), validate: true do |f| %>
          <%= devise_error_messages! %>

          <div class="row">
            <%= f.label :email,:class => 'col-xs-4 col-md-4' %><br />
            <%= f.email_field :email, autofocus: true, :class => 'col-xs-4 col-md-4' %>
          </div>

          <div class="row">
            <%= f.label :Elige_un_rol, :class => 'col-xs-4 col-md-3' %>
            <%= f.select :rol, options_for_select([,["",""], ["Docente", "docente"], ["Estudiante", "estudiante"], ["Jefe del Proyecto de Docenia", "jefe_de_docencia"], ["Jefe_del_Proyecto_de_Investigacion", "jefe_de_investigacion"], ["Presidente_ReuniÃ³n_Academia", "presidente_reunion_academia"], ["Administrador", "admin"]]), :class => 'col-xs-4 col-md-4', validate: true, :selected => @user.rol %>
           </div>

          <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
            <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
          <% end %>

          <div class="row">
            <%= f.label :password, :class => 'col-xs-4 col-md-4' %> <i>(leave blank if you don't want to change it)</i><br />
            <%= f.password_field :password, autocomplete: "off", :class => 'col-xs-4 col-md-4' %>
            <% if @minimum_password_length %>
              <br />
              <em><%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.label :password_confirmation, :class => 'col-xs-4 col-md-4' %><br />
            <%= f.password_field :password_confirmation, autocomplete: "off", :class => 'col-xs-4 col-md-4' %>
          </div>

          <div class="field">
            <%= f.label :current_password, :class => 'col-xs-4 col-md-4' %> <i>(we need your current password to confirm your changes)</i><br />
            <%= f.password_field :current_password, autocomplete: "off", :class => 'col-xs-4 col-md-4' %>
          </div>

          <div class="actions">
            <%= f.submit "Update" %>
          </div>
        <% end %>

        <h3>Cancel my account</h3>

        <p>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

        <%= link_to "Back", :back %>
    </div>
</div>
