<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= devise_error_messages! %>
    <div id="marco">
        <div class="row">
            <div class="col-md-2"><%= f.label :Curp %></div> 
            <div class="col-md-4"><%= f.text_field :curp, class: "form-control", :required => true, autofocus: true %></div>
            <div class="col-md-2"><%= f.label :Número_control %></div> 
            <div class="col-md-4"><%= f.text_field :numControl, class: "form-control", :required => true %></div>
        </div>

        <div class="row">
            <div class="col-md-2"><%= f.label :Correo_electrónico %> </div>
            <div class="col-md-4"><%= f.email_field :email, class: "form-control" %></div>
            <div class="col-md-2"><% f.label :Rol %></div>
            <div class="col-md-4"><%= f.hidden_field :rol, value: "estudiante" %></div>
        </div>

        <div class="row">
            <div class="col-md-2"><%= f.label :Contraseña %></div>
            <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> caracteres mínimo)</em>
            <% end %>
            <div class="col-md-4"><%= f.password_field :password, class: "form-control", autocomplete: "off" %></div>
            <div class="col-md-2"><%= f.label :Confirmar_contraseña %></div>
            <div class="col-md-4"><%= f.password_field :password_confirmation, class: "form-control", autocomplete: "off" %></div>
        </div>

        <div class="row">
            <div class="col-xs-12" align="right">
                <%= f.submit "Guardar", :class => 'btn btn-success' %>
            </div>
        </div>
    </div>
<% end %>