<div class="container">
    <%= render template: "siged/menuAdmin" %>
    <% breadcrumb :cat_tipo_participaciones%>

    <h3 id="align-title">CÃ¡talogo de Tipo de Participaciones</h3>
    
    <div class="row">
        <div class="col-md-1">
            <% if can? :create, CatTipoParticipacion %>
                <%= button_to new_cat_tipo_participacion_path, :class => "btn btn-primary", title: "Nueva",:method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <% end %>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead>
                    <th class="info"><%= sortable "participacion" %></th>
                    <th class="info"><%= sortable "estado" %></th>
                </thead>
                <% @tipoParticipaciones.each do |parti| %>
                    <tbody>
                        <td class="active"><%= parti.participacion %></td>
                        <td class="active"><%= parti.estado %></td>
                        <td class="active">
                            <%= link_to edit_cat_tipo_participacion_path(parti), title: "Editar" do %>
                                <span class="glyphicon glyphicon-pencil green"></span>
                            <% end %>
                        </td>
                    </tbody>
                <% end %>
            </table>
            <%= will_paginate @tipoParticipaciones %>
        </div>
    </div>
</div>