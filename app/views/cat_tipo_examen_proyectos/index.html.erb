<div class="container">
    
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    <% breadcrumb :cat_tipo_examen_proyectos%>

    <h3 id="align-title">Cat√°logo de Tipo de Examen Profesional y Proyectos</h3>
    
    <div class="row">
        <div class="col-md-1">
            <% if can? :create, CatTipoExamenProyecto %>
            <%= button_to new_cat_tipo_examen_proyecto_path, :class => "btn btn-primary", title: "Nuevo", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <% end %>
        </div>

        <div class="col-md-8">
            <table class="table table-bordered">
                <thead>
                    <th class="info"><%= sortable "nombreTipoP" %></th>
                    <th class="info"><%= sortable "estado" %></th>
                </thead>
                <% @tipoexproys.each do |tipoexproy| %>
                    <tbody>
                        <td class="active"><%= tipoexproy.nombreTipoP %></td>
                        <td class="active"><%= tipoexproy.estado %></td>
                        <td class="active">
                            <%= link_to edit_cat_tipo_examen_proyecto_path(tipoexproy), title: "Editar" do %>
                                <span class="glyphicon glyphicon-pencil green"></span>                                
                            <% end %>
                        </td>
                    </tbody>
                <% end %>
            </table>
            <%= will_paginate @tipoexproys %>
        </div>
    </div>
</div>