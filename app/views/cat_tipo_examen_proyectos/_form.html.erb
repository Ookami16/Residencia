<div class="container">
    <div id="align-forms">
        <%= nested_form_for @tipoexproy, validate: true do |tipoexproy| %>
            <div class="row">
                <%= tipoexproy.label :Nombre_del_tipo_examen_o_proyecto, :class => 'col-md-4' %>
                <div class="col-md-4">
                <% if @tipoexproy.nombreTipoP == nil %>
                    <%= tipoexproy.text_field :nombreTipoP, :class => 'col-xs-4 col-md-4', :style => 'border: 1px solid red',class: 'form-control' ,validate: true %>
                <% else %>
                    <%= tipoexproy.text_field :nombreTipoP, :class => 'col-xs-4 col-md-4',class: 'form-control', disabled: true, validate: true %>
                <% end %>
                </div>
            </div>
        
            <div class="row">
                <%= tipoexproy.label :Estado, :class => 'col-md-4' %>
                <div class="col-md-4">
                    <%= tipoexproy.select :estado, options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]),{}, :class => 'form-control', validate: true %>
                </div>
            </div>
            
            <div class="row">
                <div class="col-md-4" id="btn-cancelar">
                    <%= tipoexproy.submit :Guardar, :class => 'btn btn-success' %>
                </div>   
        <% end %>
                <div class="col-xs-2 col-md-4" id="btn-cancelar">
                        <%= button_to "Cancelar", cat_tipo_examen_proyectos_path, :class => 'btn btn-warning', :method => :get %>
                </div>
            </div>
    </div>
</div>