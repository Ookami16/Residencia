                      <li><a href="/reuniones">Reunión Academia</a></li>
                      <li><a href="/cat_criterio_academias">Criterios</a></li>
                      <li><a href="/periodo_actividad_academicas">Liberación: Actividad académica</a></li>
                    </ul>          
                  </li>
                <% elsif @tipoP.nombrePuesto  == 'Jefe de la Oficina de Investgacion' %>
                  <li><a href="/actividades/control_actividad_investigaciones">Gestión de Actividades</a></li>
                <% end %>
              <% end %>
            <% end %>
          <% end %>
        </ul>
      </div>
    </div>
