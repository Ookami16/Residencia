      <% @p = Puesto.where(docente_id: @a.id) %>
      <% x = PeriodoCursMateria.find_by(docente_id: @a.id, periodo: Periodo.order(:fechaInicio).last.periodo) %>
      <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
        <ul class="nav navbar-nav">
          <% if current_usuario.rol == 'docente' %>
            <% if @a != nil %>
              <li><%= link_to "Datos generales", docente_path(@a) %></li>
            <% else %>                            
            <% end %> 
            <li><a href="/actividades/docente_actividad_recientes">Actividades</a></li>
            <li class="dropdown"><a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Periodo Curso-Materias<span class="caret"></span></a>
              <ul class="dropdown-menu">
                <li><a href="/periodo_curs_materias">Periodo Curso-Materias</a></li>
                <% if x != nil %>
                  <li><%= link_to "Evidencia del periodo", archivo_periodos_path %></li> 
