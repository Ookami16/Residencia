                  <li><%= link_to "Evidencia por curso", curso_evidencias_path %></li>                                         
                <% end %>
                <% if @p != [] %>
                <% for puesto in @p %>
                  <% if puesto.estado == 'Activo' %>
                    <% @tipoP = CatTipoPuesto.find(puesto.cat_tipo_puesto_id) %>
                    <% if @tipoP.nombrePuesto == 'Jefe de Proyecto de Docencia' %>
                      <li><a href="/cat_criterio_evaluacion_docentes">Criterios</a></li>
                      <li><a href="/periodo_liberacion_cursos">Periodo: Liberaciones</a></li>
                    <% end %>
                  <% end %>
                <% end %>
              <% end %>
              </ul>
            </li>
          <% end %>
          
          <% if @p != [] %>
            <% for puesto in @p %>
              <% if puesto.estado == 'Activo' %>
                <% @tipoP = CatTipoPuesto.find(puesto.cat_tipo_puesto_id) %>
                <% if @tipoP.nombrePuesto == 'Jefe de la Oficina de Vinculación de Sistemas' %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Servicio Social <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                      <li><a href="servicio_sociales">Lista de Servicio Social</a></li>
                    </ul>          
                  </li>
                  
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Proyectos <span class="caret"></span></a>
