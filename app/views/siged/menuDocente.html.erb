                      <li><a href="/solicitudes">Solicitudes de residencia</a></li>
                      <li><a href="/banco_proyectos">Proyectos de residencia en banco</a></li>
                      <li><a href="/anteproyectos">Anteproyectos</a></li>
                      <li><a href="/proyectos">Proyectos de residencia</a></li>
                      <li><a href="/proyecto_investigaciones">Investigación</a></li>
                      <li><a href="/cat_documentos">Catálogo de documentos de residencia</a></li>
                    </ul>          
                  </li>
            
                <% end %>
              <% end %>
            <% end %>
          <% end %>
          
          <% if @p != [] %>
            <% for puesto in @p %>
              <% if puesto.estado == 'Activo' %>
                <% @tipoP = CatTipoPuesto.find(puesto.cat_tipo_puesto_id) %>

                <% if @tipoP.nombrePuesto == 'Secretario de academia' || @tipoP.nombrePuesto == 'Presidente de Academia' %>
                  <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Reunión académica <span class="caret"></span></a>
