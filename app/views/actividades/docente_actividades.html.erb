<div class="container">
    <div>
        
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    </div>
    <% breadcrumb :actividades %>
    
    <h3 id="align-title">Actividades en el Dpto. Sistemas y Computación</h3>
    
    <div class="row">
        <div class="col-md-1" id="calenda" style='display:block;'>
            <div class="col-md-6" id="calenda" style='display:block;'>
                <button type="submit" class="btn btn-warning" title="Calendario" name="tipo_attach" onclick="calendario1()" id="Calendario">
                <i class="glyphicon glyphicon-calendar"></i>
                </button>
            </div>
        </div>
            <div class="col-md-4"></div>  
            <%= form_tag docente_actividades_actividades_path, :method => 'get' do %>
                <div class="col-md-2">
                    <%= text_field_tag :search, params[:search], placeholder: "Buscar...", class: "form-control" %>
                </div>
                <div class="col-md-1">
                    <%= select_tag :periodo, options_for_select([["ENE-JUN", "01/01 - 31/06"], ["FEB-JUN", "01/02 - 31/06"], ["AGO-DIC", "01/08 - 31/12"]], params[:periodo]), include_blank: true, class: "form-control" %>
                </div>
                <div class="col-md-2">
                       <%= number_field_tag :anio, params[:anio], placeholder: "año", class: "form-control" %>
                </div>
                <div class="col-md-1">
                    <%= button_tag(type: 'submit', class: "btn btn-default", title: "Buscar") do %>
                        <span class="glyphicon glyphicon-search"></span> 
                    <% end %>       
                </div>         
            <% end %>        
        <div class="col-md-1">
            <%= button_to docente_actividad_recientes_actividades_path, :class => "btn btn-primary", title: "Recientes", :method => :get do %>
                    <span class="glyphicon glyphicon-list"></span>
            <% end %>
        </div>
    </div>
    <div id = calend style='display:none;'>
         <div style="position: relative; top: -45px; left: 81px; padding-right: 0px">
             <button type="submit" class="btn btn-danger" name="tipo_attach" onclick="calendario2()" title="Ocultar calendario" id="CalendarioOc">
                <i class="glyphicon glyphicon-calendar"></i>
            </button>
         </div>
        <%= render 'calendario' %>
    </div>    
    
    <% if current_usuario.rol == 'docente' %>
        <div id="actividades">
            <%= render 'actividad_doc' %>
        </div>
    <% end %>
</div>