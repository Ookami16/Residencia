    <div class="row">
        <div class="col-xs-6 col-sm-1">
            <% if can? :create, CatCriterioEvalServicio %>
                <%= button_to new_cat_criterio_eval_servicio_path, :class => "btn btn-primary", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
