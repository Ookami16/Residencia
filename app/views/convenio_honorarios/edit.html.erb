<div class="contenedor">
    
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    <div id="align-forms">
        <%= form_for [@docente, @convenio], validate: true do |convenio| %>
        
            <% if convenio.object.pdfConvenio.file != nil %>
            <div class="row">
                <%= convenio.label :Convenio_actual, class: 'col-md-3' %>
                <%= convenio.object.pdfConvenio.file.filename %>
            </div>            
            <% end %>
        
            <div class="row">
                <%= convenio.label :Convenio, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= convenio.file_field :pdfConvenio, :class => 'col-xs-4 col-md-4', validate: true %>
                </div>
            </div>
        
             <div class="row">
                <%= convenio.label :Fecha_inicio, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= convenio.date_field :fechaInicio, class: "form-control", validate: true %>
                </div>
            </div>
        
            <div class="row">
                <%= convenio.label :Fecha_termino, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= convenio.text_field :fechaTermino, class: "form-control", validate: true %>
                </div>
            </div>
        
            <div class="row">
                <%= convenio.label :Estado, :class => 'col-md-3' %>
                <div class="col-md-4">
                    <%= convenio.select :estado, options_for_select([["Activo", "Activo"], ["Inactivo", "Inactivo"]]),{}, :class => 'form-control', validate: true, :selected => @convenio.estado %>
                </div>                
            </div>
        
            <div class="row">
                <div class="col-xs-2 col-md-4" id="btn-cancelar">
                    <%= convenio.submit :Guardar, :class => 'btn btn-success' %>
                </div>
            <% end %>
            </div>
    </div>
</div>