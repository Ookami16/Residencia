<div class="container">
    <%= render template: "siged/menuAdmin" %>

    <h3 id="align-title">CÃ¡talogo de Criterios para la evaluacion de Residencias</h3>
    
    <div class="row">
        <div class="col-xs-6 col-sm-1">
            <% if can? :create, CatCriterioEvalResidencia %>
                <%= button_to new_cat_criterio_eval_residencia_path, :class => "btn btn-primary", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <% end %>
        </div>

        <div class="col-xs-6 col-sm-9">
            <table class="table table-bordered">
                <thead>
                    <th class="info"><%= sortable "Nombre del criterio" %></th>
                    <th class="info"><%= sortable "Valor Asignado" %></th>
                    <th class="info"><%= sortable "Status" %></th>
                </thead>
                <% @cat_criterio_eval_residencias.each do |residencia| %>
                    <tbody>
                        <td class="active"><%= residencia.criterio_eval %></td>
                        <td class="active"><%= residencia.valor %></td>
                        <td class="active"><%= residencia.status %></td>
                        
                        <td class="active">
                            <%= link_to edit_cat_criterio_eval_residencia_path(residencia) do %>
                                <span class="glyphicon glyphicon-pencil green"></span>
                                <div class="tip" id="action2">Editar</div>
                               
                            <% end %>

                        </td>
                    </tbody>
                <% end %>
            </table>
           
        </div>
    </div>
</div>
