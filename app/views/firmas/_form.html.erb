<div class="container">
    <div id="align-forms">
        <%= nested_form_for @firma, validate: true do |f| %>

            <div class="row">
                <%= f.label :Cargo, :class => 'col-md-3' %>
                <div class="col-md-4">                
                <% if @firma.cargo != nil %>
                    <%= f.text_field :cargo,disabled: true, :class => 'form-control', validate: true %>
                <% else %>
                    <%= f.text_field :cargo, :class => 'form-control', validate: true %> 
                <% end %>
                </div>
            </div>
            <div class="row">
                <div class="col-md-3">
                    <%= f.label :Titular %>
                </div>
                <div class="col-md-4">
                    <%= f.text_field :titular, class: "form-control" %>
                </div>
            </div>
            <div class="row" id="btn-cancelar">
                <div class="col-md-5" align="right">
                    <%= f.submit :Guardar, :class => 'btn btn-success' %>
                </div>   
        <% end %>
                <div class="col-md-4">
                        <%= button_to "Cancelar", firmas_path, :class => 'btn btn-warning', :method => :get %>
                </div>
            </div>
    </div>
</div>