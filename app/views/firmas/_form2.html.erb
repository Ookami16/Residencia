<div id="product-modal" class="modal fade">
	<div class="modal-dialog modal-lg">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-label= "Close"><span aria-hidden="true">&times;</span></button>
				<h4 class="modal-title"><%= title %></h4>
					<%= nested_form_for @firma, validate: true, remote: true do |f| %>
						<div class="modal-body">
							<div class="row">
                                <%= f.label :Cargo, :class => 'col-md-3' %>
                                <div class="col-md-4">                
                                <% if @firma.cargo != nil %>
                                    <%= f.text_field :cargo,disabled: true, :class => 'form-control', validate: true %>
                                <% else %>
                                    <%= f.text_field :cargo, :class => 'form-control', validate: true %> 
                                <% end %>
                                </div>
                            </div>
                            <div class="row">
                                <div class="col-md-3">
                                    <%= f.label :Titular %>
                                </div>
                                <div class="col-md-4">
                                    <%= f.text_field :titular, class: "form-control" %>
                                </div>
                            </div>
                            <div class="row" id="btn-cancelar">
                                <div class="col-md-5" align="right">
                                    <%= f.submit :Guardar, :class => 'btn btn-success' %>
                                </div>  				
                			</div>
					<% end %>	
			</div>
		</div>
	</div>
</div>