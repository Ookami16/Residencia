<div class="container">
    
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    <% breadcrumb :cat_evidencias %>

    <h3 id="align-title">CÃ¡talogo de Evidencias para Actividades</h3>
    <div class="row">
        <div class="col-md-1">
            <% if can? :create, CatEvidencia %>
                <%= button_to new_cat_evidencia_path, :class => "btn btn-primary", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <% end %>
        </div>
        </div>
        <div class="row">
        <div class="col-md-12">
            <table class="table table-bordered">
                <thead>
                    <th class="info"><%= sortable "nombreEvidencia" %></th>                
                    <th class="info"><%= sortable "estado" %></th>
                    <th class="info">Requisitos</th>
                </thead>
                <% @evidencias.each do |evidencia| %>
                    <tbody>
                        <td class="active"><%= evidencia.nombreEvidencia %></td>
                        <td class="active"><%= evidencia.estado %></td>
                        <td class="active">
                            <% evidencia.requisito_evidencias.each do |p| %>
                                <p><%= p.nombreRequisito %></p>
                            <% end %>
                        </td>
                        <td class="active">
                            <%= link_to cat_evidencia_path(evidencia) do %>
                                <span class="glyphicon glyphicon-eye-open blue"></span>
                            <% end %>
                            <%= link_to edit_cat_evidencia_path(evidencia) do %>
                                <span class="glyphicon glyphicon-pencil green"></span>
                                <div class="tip" id="action2">Editar</div>
                            <% end %>
                        </td>
                    </tbody>
                <% end %>
            </table>
            <%= will_paginate @evidencias %>
        </div>
    </div>
</div>