<div class="container">
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    
    <h1 id="align-title">Liberaci√≥n de Actividades Frente a Grupo</h1>
    
    <div class="row">
        <div class="col-xs-6 col-sm-2">
            <% if can? :create, LiberacionCurso %>
                <%= button_to "Nuevo", new_liberacion_curso_path, :class => "btn btn-primary", :method => :get %>
            <% end %>
        </div>
        <div class="col-xs-6 col-sm-4">
            <div id="table-responsive">
                <table class="table table-sm">
                    <thead>                
                        <th class="info"><%= sortable "periodo" %></th>
                    </thead>
                    <% @liberaciones.each do |liberacion| %>
                        <tbody>                    
                            <td class="active">
                                <%= liberacion.periodo %>
                            </td>
                            <% if can? :read, liberacion %>
                                <td class="active">
                                    <%= link_to liberacion_curso_path(liberacion) do %><span class="glyphicon glyphicon-eye-open blue"></span><div class="tip" id="action1">Ver</div><% end %>    
                                </td>
                            <% end %>
                            <% if can? :update, liberacion %>
                                <td>
                                    <%= link_to edit_liberacion_curso_path(liberacion) do %>
                                        <span class="glyphicon glyphicon-pencil green"></span>
                                        <div class="tip" id="action2">Editar</div>
                                    <% end %>
                                </td>
                            <% end %>
                        </tbody>
                    <% end %>
                </table>
                <%= will_paginate @liberaciones %>
            </div>
        </div>
    </div>
</div>