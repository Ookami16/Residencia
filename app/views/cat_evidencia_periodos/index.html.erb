<div class="container">
    
    <% if current_usuario.rol == 'admin' %>
        <%= render template: "siged/menuAdmin" %>
    <% elsif current_usuario.rol == 'docente' %>
        <%= render template: "siged/menuDocente" %>
    <% end %>
    <%# breadcrumb :cat_evidencias %>

    <h3 id="align-title">CÃ¡talogo de Evidencias</h3>
    <div class="row">
        <div class="col-xs-6 col-sm-1">
            <% #if can? :create, CatEvidencia %>
                <%= button_to new_cat_evidencia_periodo_path, :class => "btn btn-primary", :method => :get do %>
                     <span class="glyphicon glyphicon-plus"></span>
                <% end %>
            <%# end %>
        </div>
    </div>

    <div class="row">
        <div class="col-sm-12">
            <table class="table table-bordered">
                <thead>
                    <th class="info">Nombre</th>                
                    <th class="info">Tipo</th>
                    
                </thead>
                <% @evidencias.each do |evidencia| %>
                    <tbody>
                        <td class="active"><%= evidencia.etiqueta %></td>
                        <td class="active"><%= evidencia.tipo %></td>                        
                        <td class="active">
                            <%= link_to cat_evidencia_periodo_path(evidencia) , title: "Ver" do %>
                                <span class="glyphicon glyphicon-eye-open blue"></span>
                            <% end %>
                            <%= link_to edit_cat_evidencia_periodo_path(evidencia), title: "Editar" do %>
                                <span class="glyphicon glyphicon-pencil green"></span>
                            <% end %>
                        </td>
                    </tbody>
                <% end %>
            </table>
            <%# will_paginate @evidencias %>
        </div>
    </div>
</div>